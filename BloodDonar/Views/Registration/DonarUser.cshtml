@model BloodDonar.Models.RegisterationMV

@{
    ViewBag.Title = "Donar Registration";
}




<div class="appointment-form-wrapper theme-custom-box-shadow text-center clearfix wow zoomIn">
    <h3 class="join-heading join-heading-alt"> Donar Registration Form</h3>

    @using (Html.BeginForm("DonarUser", "Registration", FormMethod.Post, new { @class = "appoinment-form" }))
    {
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserTypeID)
        @Html.HiddenFor(model => model.User.UserID)
        @Html.HiddenFor(model => model.User.UserName)
        @Html.HiddenFor(model => model.User.Password)
        @Html.HiddenFor(model => model.User.AccountStatus)
        @Html.HiddenFor(model => model.User.AccountStatusID)
        @Html.HiddenFor(model => model.User.Description)
        @Html.HiddenFor(model => model.User.EmailAddress)


        <div class="form-group col-md-6">


            @Html.EditorFor(model => model.Donar.FullName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Full Name", @type = "text" } })
            @Html.ValidationMessageFor(model => model.Donar.FullName, "", new { @class = "text-danger" })


        </div>

        <div class="form-group col-md-6">
            @Html.EditorFor(model => model.Donar.ContactNo, new { htmlAttributes = new { @class = "form-control", @placeholder = "ContactNo",  } })
            @Html.ValidationMessageFor(model => model.Donar.ContactNo, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.EditorFor(model => model.Donar.CNIC, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Aadhaar", @type = "number" } })
            @Html.ValidationMessageFor(model => model.Donar.CNIC, "", new { @class = "text-danger" })


        </div>
        <div class="form-group col-md-6">
            <div class="select-style">


                @Html.DropDownList("BloodGroupID", null, "--select blood group", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BloodGroupID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-6">
            <div class="select-style">


                @Html.DropDownList("CityID", null, "--your city--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CityID, "", new { @class = "text-danger" })
            </div>
        </div>
        <p>last Donation date</p>
        <div class="form-group col-md-6">
            @Html.EditorFor(model => model.Donar.LastDonationdate, new { htmlAttributes = new { @class = "form-control", @placeholder = "Last Donation Date", @type = "date" } })
            @Html.ValidationMessageFor(model => model.Donar.LastDonationdate, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            @Html.EditorFor(model => model.Donar.Location, new { htmlAttributes = new { @class = "form-control", @placeholder = "Address", @type = "text" } })
            @Html.ValidationMessageFor(model => model.Donar.Location, "", new { @class = "text-danger" })


        </div>






        <div class="form-group col-md-12 col-sm-12 col-xs-12">
            <button id="btn_submit" class="btn btn-theme" type="submit">submit</button>
        </div>

    }

</div>
