@model IEnumerable<BloodDonar.Models.RequestListMV>

@{
    ViewBag.Title = "All Requests";
}



<div class="col-md-8">
    <div class="contact-form-block">
        <h2 class="contact-title">All Requests</h2>
        <p>
            @Html.ActionLink("New Request", "FinderDonors", null, new { @class = "btn btn-theme" })
        </p>
        <table class=" table table-hover">
            <tr>
                <th>
                    Request Date
                </th>

                <th>
                    Donor
                </th>
                <th>
                    BloodGroup
                </th>
                <th>
                    ExpectedDate
                </th>
                <th>
                    Description
                </th>
                <th>
                    Status
                </th>

                <th>Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestDate)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.AcceptedFullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BloodGroup)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpectedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestDetails)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AcceptedType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestStatus)
                    </td>

                    <td class="text-right">
                        @if (item.RequestStatusID == 1)
                        {
                            @Html.ActionLink("Cancel", "cancel Request", new { id = item.RequestID }, new { @class = "btn btn-danger" })
                        }
                        else if (item.RequestStatusID == 2)
                        {
                            @Html.ActionLink("Complete", "complete Request", new { id = item.RequestID }, new { @class = "btn btn-success" })


                        }
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
